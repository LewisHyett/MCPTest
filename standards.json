{
  "version": "1.0.0",
  "rules": {
    "objectPrefix": {
      "requiredPrefix": "TES",
      "applyTo": ["table", "page", "report", "codeunit", "query", "xmlport", "enum"],
      "severity": "major"
    },
    "fieldPrefix": {
      "requiredPrefix": "TES",
      "applyTo": ["tableextension"],
      "target": "fields",
      "severity": "major"
    },
    "naming": {
      "case": "PascalCase",
      "allowSpaces": true,
      "severity": "minor"
    },
    "formatting": {
      "indent": 4,
      "braceOnNewLine": true,
      "severity": "minor"
    },
    "variables": {
      "includeObjectContext": true,
      "prefixes": ["Rec", "Temp", "TES"],
      "severity": "minor"
    },
    "references": {
      "preferNamesOverIds": true,
      "severity": "info"
    },
    "documentation": {
      "requireXmlDoc": true,
      "applyTo": ["publicProcedures", "triggers"],
      "severity": "major"
    }
  }
}
